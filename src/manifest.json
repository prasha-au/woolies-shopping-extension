{
  "name": "Shopping List",
  "description": "Keep to Woolworths.",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Click to show addon"
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "icons": {
    "32": "assets/icon_32.png",
    "64": "assets/icon_64.png",
    "192": "assets/icon_192.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "sidePanel"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "host_permissions": [
    "http://localhost/*",
    "https://www.woolworths.com.au/*"
  ]
}